#!/bin/bash

Checks=""
defaultbranch="develop"

__fail() {
    __test "FAIL: $1"  && exit 2
}

__test() {
    Checks="${Checks}\t- $1\n"
    echo -e "$1\n"
}

pr() {
    cd $WORKDIR
    branch="${2:-$defaultbranch}"
    read -p "Switch to $branch ?"
    composer install --no-dev && __test "Composer updated" || __fail "Composer issues"
    git fetch && git checkout -f $defaultbranch
    git pull
    git branch | grep -v "$defaultbranch" | xargs git branch -D >/dev/null 2>&1 | egrep -v "^error: branch"
    if [ "$branch" != "$defaultbranch" ];then
        git checkout $branch
        git pull
        git merge -m "Merge $defaultbranch" $defaultbranch
    fi
    grep -r "<<<< HEAD" && __fail "Address conflicts" ||  __test "No conflicts"
    (git ls-files --others --exclude-standard | egrep -v ".csv|.pem|.svg|cron/test.php") && __fail "Found unexpected files (above)" || __test "No unexpected files"
    CurrentBranch="$(git branch | grep '^*' | sed 's/^..//g')"
    [ "$CurrentBranch" == "$branch" ]  && __test "Successfully switched to $CurrentBranch" || __fail "Could not switch to $branch (currently $CurrentBranch)"
    ./vendor/bin/phinx migrate -e ${qasite}
    grunt dist
    clearc && __test "Cache Cleared"
}

clearc() {
    (cd /tmp/templateCache/1/${qasite}.allbeauty.com && rm -rf * && echo -e "\n\nCached content $(ls -l)")
}

reindex() {
    d1="$(date)"
    echo -e "For complete reset, run;\nphp cron/generateProductAvailability.php\nphp cron/regenerateCatalogues.php\ncron/generateAlgoliaIndices.php force\n"
    clearc
    INDICES="$WORKDIR/storage/dd_Algolia*"
    cd $WORKDIR
    rm -rf $INDICES
    find $INDICES 2>/dev/null && __fail "$INDICES still remain"
    echo "Regenerating $(grep 'indexName' config.json) on https://www.algolia.com/apps/VS22L5JM4O/explorer/indices"
    php cron/generateAlgoliaIndices.php force
    echo -e "Started: $d1\nStopped: $(date)"
}

logs() {
    clear
    echo "Last ten logs updated..."
    ls -ltr /var/log/httpd/* | tail -10
    errlog="$(ls -tr /var/log/httpd/* | grep "error" | tail -1)"
    echo -e "\n<CR> to tail (or 'O' to open) $errlog ?";read OtO
    [[ "$OtO" =~ ^(O|o)$ ]] && vim $errlog || (echo "Tailing..." && tail -f $errlog)
}


mods() { # List files created or modified in last 60 mins
     find . -cmin -60 -o -mmin -60
}

csv() { # Transpose a line from a CSV with it's header
    [ -z "$rep" ] && export rep="./htdocs/reports/styleloungeCsDede.txt" 
    [ -z "$val" ] && export val="98452"
    paste -d'=' <(head -1 $rep | tr '|' '\n') <(cat $rep | grep $val | tr '|' '\n')
    echo -e "\n\nUsed (export values to override)...\n\tval=$val \n\trep=$rep\n"
}


 
help() {
    echo -e "\nUsage: $0 [Option]\n\nOptions;"
    declare -F | grep -v "__" | sed -e "s/^declare -f /\t/g" 
    echo -e "\nWORKDIR: $WORKDIR\nSERVER.: $qasite\n"
}

[ -z "$WORKDIR" ] && __fail "WORKDIR not set"
qasite=$(uname -n | sed "s/\...*//g")
[ "$qasite" == "ip-10-90-0-249" ] && qasite="slaine"
[ "$qasite" == "ip-10-90-0-53" ] && qasite="hammerstein"

[ -z "$1" ] && help || $1 $@
echo -e "PASSED:\n$Checks"

